<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan"
    android:padding="24dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHeroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SystemREQ"
            android:textStyle="bold"
            android:textSize="34sp"
            android:letterSpacing="0.08"
            android:textColor="#8fbcbc"
            />

        <TextView
            android:id="@+id/tvHeroSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Telefonuna hangi uygulamanın uygun olduğunu öğren"
            android:textSize="14sp"
            android:textColor="@color/body_text"
            android:alpha="0.85"
            android:gravity="center"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="22dp"
            android:text="Uygunluk kontrolüne başla"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg" />

    </LinearLayout>

    <!-- imza -->
    <TextView
        android:id="@+id/tvCredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@yaziyorulasilamiyor"
        android:textSize="12sp"
        android:textColor="@color/body_text"
        android:alpha="0.45"
        android:gravity="center"
        android:paddingBottom="6dp" />

</LinearLayout>
